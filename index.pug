        link(rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Gulzar&display=swap")
        link(rel="stylesheet" href="./sass/css/style.css")
    body
        //- Start Header
        .header
            .heading
                    img(src="./images/logo.png" alt="my-logo" class="logo")
                    h1 شهر رمضان الذي أنزل فيه القرآن
                    p هدًى للناس وبينات من الهدى والفرقان 
                    img(src="./images/head-1.png" alt="" class="img")

        //- End Header

        //- Start Table 
        .table
